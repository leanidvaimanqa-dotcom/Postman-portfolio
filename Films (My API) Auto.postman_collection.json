				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"function getRandomTitle() {\r",
							"    var titles = [\r",
							"        \"Красная планета\", \"Тихий океан\", \"Ночной патруль\", \"Последний герой\", \"Скрытый город\",\r",
							"        \"Ледяной шторм\", \"Огненный путь\", \"Забытый остров\", \"Темный лес\", \"Золотой рассвет\",\r",
							"        \"Сердце дракона\", \"Лунная дорога\", \"Стальной град\", \"Чёрное зеркало\", \"Гром над морем\",\r",
							"        \"Хрустальный замок\", \"Туман над рекой\", \"Осколки времени\", \"Безмолвный свидетель\", \"Кодекс чести\",\r",
							"        \"Город теней\", \"Путешествие домой\", \"Сияние звезды\", \"Падение ангела\", \"Мост судьбы\",\r",
							"        \"Северный ветер\", \"След в ночи\", \"Закон улиц\", \"Чужое небо\", \"Белая пустыня\",\r",
							"        \"Невидимый враг\", \"Хроники дождя\", \"Песнь света\", \"Пленники времени\", \"Огни мегаполиса\",\r",
							"        \"Сломанная стрела\", \"Зимний сон\", \"Летний шёпот\", \"Пятая линия\",\r",
							"        \"За горизонтом\", \"Точка возврата\", \"Пепел и снег\", \"Граница мира\", \"Эхо грозы\",\r",
							"        \"Новая эра\", \"Одинокий волк\", \"Тайна озера\", \"Легенда города\", \"Крылья ночи\"\r",
							"    ];\r",
							"    return titles[Math.floor(Math.random() * titles.length)];\r",
							"}\r",
							"\r",
							"function getRandomDirector() {\r",
							"    var directors = [\r",
							"        \"Steven Spielberg\", \"Christopher Nolan\", \"Quentin Tarantino\", \"Martin Scorsese\", \"James Cameron\",\r",
							"        \"Ridley Scott\", \"Peter Jackson\", \"Alfred Hitchcock\", \"Stanley Kubrick\", \"Francis Ford Coppola\",\r",
							"        \"Clint Eastwood\", \"Tim Burton\", \"David Fincher\", \"Guy Ritchie\", \"George Lucas\",\r",
							"        \"Robert Zemeckis\", \"Ron Howard\", \"Wes Anderson\", \"Denis Villeneuve\", \"Guillermo del Toro\",\r",
							"        \"Sergio Leone\", \"Akira Kurosawa\", \"Hayao Miyazaki\", \"Lars von Trier\", \"Sofia Coppola\",\r",
							"        \"Coen Brothers\", \"Patty Jenkins\", \"Greta Gerwig\", \"Bong Joon-ho\", \"Spike Lee\",\r",
							"        \"Sam Mendes\", \"Ang Lee\", \"JJ Abrams\", \"Kenneth Branagh\", \"Robert Rodriguez\",\r",
							"        \"Woody Allen\", \"Pedro Almodóvar\", \"Jean-Luc Godard\", \"David Lynch\", \"Paul Thomas Anderson\",\r",
							"        \"Michael Bay\", \"Bryan Singer\", \"Kathryn Bigelow\", \"Ridley Scott\", \"Gore Verbinski\",\r",
							"        \"Luc Besson\", \"Richard Linklater\", \"Joel Schumacher\", \"M. Night Shyamalan\", \"John Woo\"\r",
							"    ];\r",
							"    return directors[Math.floor(Math.random() * directors.length)];\r",
							"}\r",
							"\r",
							"\r",
							"function getRandomYear() {\r",
							"    var min = 1980;\r",
							"    var max = 2025;\r",
							"    return Math.floor(Math.random() * (max - min + 1)) + min;\r",
							"}\r",
							"\r",
							"function getRandomGenre() {\r",
							"    var genres = [\r",
							"        \"Action\",\"Comedy\",\"Drama\",\"Horror\",\"Sci-Fi\",\"Fantasy\",\"Romance\",\"Thriller\",\"Crime\",\"Adventure\"\r",
							"    ];\r",
							"    return genres[Math.floor(Math.random() * genres.length)];\r",
							"}\r",
							"\r",
							"function getRandomRating() {\r",
							"    var min = 6.3;\r",
							"    var max = 8.0;\r",
							"    var rating = Math.random() * (max - min) + min;\r",
							"    return Number(rating.toFixed(1)); // один знак после запятой\r",
							"}\r",
							"\r",
							"\r",
							"// формируем массив из 20 фильмов\r",
							"var films = [];\r",
							"for (var i = 0; i < 20; i++) {\r",
							"    films.push({\r",
							"        title: getRandomTitle(),\r",
							"        director: getRandomDirector(),\r",
							"        year: getRandomYear(),\r",
							"        genre: getRandomGenre(),\r",
							"        rating: getRandomRating()\r",
							"    });\r",
							"}\r",
							"\r",
							"pm.environment.set(\"films_array\", JSON.stringify(films));\r",
							"console.log(\"Films array:\", films);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
